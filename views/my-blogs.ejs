<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Blogs</title>
  <!-- Bootstrap 5 CDN -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    /* Custom styles */
    body {
      background-color: #F9E642;
      font-family: Arial, sans-serif;
    }

    .container {
      margin-top: 50px;
    }

    h1 {
      color: #c90900;
      text-align: center;
      margin-bottom: 30px;
    }

    .create-blog-btn {
      background-color: #c90900;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      text-align: center;
      margin-bottom: 20px;
    }

    .create-blog-btn:hover {
      background-color: #a70700;
    }

    .blog-card {
      width: 50%;
      border: 2px solid #c90900;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
      background-color: white;
      text-align: center;
      margin: auto;
      gap: 3;
    }

    .blog-card h2 {
      color: #c90900;
      font-size: 24px;
    }

    .blog-card p {
      color: #333;
      font-size: 16px;
    }

    .blog-card img {
      width: 50%;
      border-radius: 10px;
      margin-top: 10px;
      height: 300px;
    }

    .action-btns {
      margin-top: 20px;
    }

    .btn-custom {
      background-color: #c90900;
      color: white;
      border: none;
      border-radius: 5px;
      padding: 8px 15px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-right: 10px;
    }

    .btn-custom:hover {
      background-color: #a70700;
    }

    .btn-delete {
      background-color: #f44336;
    }

    .btn-delete:hover {
      background-color: #d32f2f;
    }



    .main-blog-cover {
      margin-bottom: 30px;
      /* Adds space between the cards */
    }

    .content{
      text-align: left;
    }
  </style>
</head>

<body>

  <div class="container">
    <h1>My Blogs</h1>

    <!-- Create New Blog Button -->
    <!-- <a href="/add-blog" class="btn create-blog-btn">Create New Blog</a> -->

    <!-- Blogs List -->
    <div class="row">
      <% blogs.forEach(blog=> { %>
        <div class="col-md-6 main-blog-cover">
          <div class="blog-card" style="row-gap: 2;">
            <!-- Blog Image -->
            <% if (blog.image) { %>
              <img src="/upload/<%= blog.image %>" alt="<%= blog.title %>">
              <% } %>
                <hr>
                <h2>
                  <%= blog.title %>
                </h2>
                <hr>
                <p class="content">
                  <%= blog.content %>
                </p>
                <hr>


                <!-- Action Buttons -->
                <div class="action-btns">
                  <a href="/edit-blog/<%= blog._id %>" class="btn btn-custom">Edit</a>

                  <form action="/delete-blog/<%= blog._id %>" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-custom btn-delete">Delete</button>
                  </form>
                </div>
          </div>
        </div>
        <% }) %>
    </div>
  </div>

  <!-- Bootstrap 5 JS CDN -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>